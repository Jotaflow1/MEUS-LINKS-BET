<body>

  <h1>ðŸŒ¸ Meus Links Favoritos ðŸŒ¸</h1>

  <form id="linkForm">
    <input type="text" id="linkName" placeholder="ðŸ”— Nome do link" required />
    <input type="text" id="linkURL" placeholder="https://exemplo.com" required />
    <input type="text" id="linkImage" placeholder="ðŸ–¼ï¸ URL da imagem (opcional)" />
    <button type="submit">âœ¨ Adicionar</button>
  </form>

  <div id="links"></div>

  <script>
    const form = document.getElementById('linkForm');
    const linksDiv = document.getElementById('links');
    let links = JSON.parse(localStorage.getItem('meus_links') || '[]');

    const defaultImg = 'https://cdn-icons-png.flaticon.com/512/60/60580.png';

    function renderLinks() {
      linksDiv.innerHTML = '';
      links.forEach(link => {
        const div = document.createElement('div');
        div.className = 'link-item';

        const img = document.createElement('img');
        img.className = 'link-image';
        img.src = (link.imageUrl && link.imageUrl.trim() !== '') ? link.imageUrl.trim() : defaultImg;
        img.alt = link.name;
        img.onerror = () => { img.src = defaultImg; };

        const nameLink = document.createElement('a');
        nameLink.href = link.url;
        nameLink.target = '_blank';
        nameLink.className = 'link-name';
        nameLink.innerHTML = `ðŸ”— ${link.name} <span class="emoji-animated">âœ¨</span>`;

        const clickBtn = document.createElement('div');
        clickBtn.className = 'click-button';
        clickBtn.textContent = 'ðŸ‘‰ Clique aqui';
        clickBtn.onclick = () => {
          window.open(link.url, '_blank');
        };

        div.appendChild(img);
        div.appendChild(nameLink);
        div.appendChild(clickBtn);

        linksDiv.appendChild(div);
      });
    }

    form.addEventListener('submit', (e) => {
      e.preventDefault();
      const name = document.getElementById('linkName').value.trim();
      const url = document.getElementById('linkURL').value.trim();
      const imageUrl = document.getElementById('linkImage').value.trim();

      if (name && url) {
        links.push({ name, url, imageUrl });
        localStorage.setItem('meus_links', JSON.stringify(links));
        renderLinks();
        form.reset();
      }
    });

    renderLinks();
  </script>

</body>
