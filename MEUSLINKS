<body>
  <h1>Meus Links</h1>
  <form id="linkForm" autocomplete="off">
    <input type="text" id="linkName" placeholder="Nome do link" required />
    <input type="text" id="linkURL" placeholder="https://exemplo.com" required />
    <button type="submit">Adicionar</button>
  </form>
  <div id="links"></div>

  <script>
    const form = document.getElementById('linkForm');
    const linksDiv = document.getElementById('links');
    let links = JSON.parse(localStorage.getItem('meus_links') || '[]');

    function isValidURL(string) {
      try {
        new URL(string);
        return true;
      } catch {
        return false;
      }
    }

    function fetchFavicon(url) {
      try {
        const u = new URL(url);
        return u.origin + '/favicon.ico';
      } catch {
        return '';
      }
    }

    function renderLinks() {
      linksDiv.innerHTML = '';
      links.forEach((link, index) => {
        const div = document.createElement('div');
        div.className = 'link-item';

        const imgSrc = fetchFavicon(link.url) || 'https://via.placeholder.com/50?text=🔗';

        div.innerHTML = `
          <img src="${imgSrc}" alt="Ícone do link" onerror="this.src='https://via.placeholder.com/50?text=🔗';" />
          <div class="link-info">
            <a href="${link.url}" target="_blank" rel="noopener noreferrer">
              ${link.name} <span class="emoji">✨</span>
            </a>
            <span class="click-here" onclick="window.open('${link.url}', '_blank')">👉 Clique aqui para acessar</span>
          </div>
          <button class="visit-btn" onclick="window.open('${link.url}', '_blank')">Clique aqui</button>
        `;
        linksDiv.appendChild(div);
      });
    }

    form.addEventListener('submit', (e) => {
      e.preventDefault();
      const name = document.getElementById('linkName').value.trim();
      const url = document.getElementById('linkURL').value.trim();

      if (!isValidURL(url)) {
        alert('Por favor, insira uma URL válida, começando com https://');
        return;
      }

      if (name && url) {
        links.push({ name, url });
        localStorage.setItem('meus_links', JSON.stringify(links));
        renderLinks();
        form.reset();
      }
    });

    renderLinks();
  </script>
</body>
</html>
